<div class="main-content d-flex justify-content-center">
    <div class="col-lg-6 col-11 shadow p-lg-5 p-md-3 p-0 py-3">
        <h1 class="header-font px-1 py-4 header-font">Корзина</h1>
        <hr/>
        {{#if this.products}}
            <div class="px-3 m-2">
                <ul class="list-group" id="products-list">
                    {{#each products}}
                        <li class="list-group-item d-flex justify-content-between flex-column flex-md-row">
                            <span style="font-weight: bold">{{this.productName}}</span>
                            <div class="mr-3 d-inline">
                                Кількість: <button class="default-link grey-color" onclick="reduceQtyByOne('/reduce/{{this.item.Sub_Product_ID}}')"><i class="fa fa-minus-circle"></i></button><span class="qty-span mx-2">{{this.qty}}</span><button class="default-link grey-color" onclick="increaseQtyByOne('/addtocart/{{this.item.Sub_Product_ID}}')"><i class="fa fa-plus-circle"></i></button>
                            </div>
                            <span style="font-weight: bold">{{this.price}}</span>
                            <button class="default-error-link" onclick="removeProduct('/remove/{{this.item.Sub_Product_ID}}')"><i class="fa fa-times-circle-o fa-lg"></i></button>
                        </li>
                    {{/each}}
                </ul>
                {{> alertcontainer}}
            </div>
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <strong class="header-font">Сума: <span id="totalPriceSpan">{{totalPrice}}</span> грн.</strong>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <button type="button" class="btn main-button" onclick="tryToOrder()">Замовити</button>
                    </div>
                </div>
        {{else}}
            <div class="row">
                <div class="my-5 mx-3">
                    <h2 class="header-font">В корзині пусто! Розпочніть покупки.</h2>
                </div>
            </div>
        {{/if}}

    </div>
</div>